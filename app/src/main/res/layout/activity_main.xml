<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp" tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonNewProfe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="17dp"
        android:text="Nuevo Profesor" />

    <Button
        android:id="@+id/buttonNewEstu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NUEVO ALUMNO"
        android:layout_alignBaseline="@+id/buttonNewProfe"
        android:layout_alignBottom="@+id/buttonNewProfe"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp" />

    <Button
        android:id="@+id/buttonBuscarAlumnosYProfes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="BUSCAR ALUMNOS Y PROFESORES" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="ESCOJE LA OPCIÃ“N"
        android:textSize="50px" />

    <Button
        android:id="@+id/buttonNuevaAsginatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonNewProfe"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:text="NUEVA ASIGNATURA" />

</RelativeLayout>
